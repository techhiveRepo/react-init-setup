{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "target": "es5",
    "strict": true,
    "jsx": "react",
    "lib": [
      "es5",
      "es6",
      "dom"
    ]
  },
  "include": [
    "./src/**/*",
    "./config/**/*"
  ],
  "exclude": ["node_modules"]
}
